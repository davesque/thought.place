#!/usr/bin/env bash

set -o errexit
set -o pipefail

indent() {
  RE="s/^/       /"
  [ $(uname) == "Darwin" ] && sed -l "$RE" || sed -u "$RE"
}

MANAGE_FILE=$(find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:2}

echo "-----> Compressing static files"
python $MANAGE_FILE compress 2>&1 | indent

PANDOC_FILE=$(find . -maxdepth 3 -type f -name 'pandoc' | head -1)
PDF2SVG_FILE=$(find . -maxdepth 3 -type f -name 'pdf2svg' | head -1)

echo "$PANDOC_FILE"
echo "$PDF2SVG_FILE"

echo "-----> Loading articles"
python $MANAGE_FILE loadarticles 2>&1 | indent

echo
